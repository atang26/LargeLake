<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.student.largelake.MainActivityErie">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lake Erie"
        android:id="@+id/textViewTitleErie"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/lakeerie"
        android:layout_above="@+id/textViewSummaryErie"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewTitleErie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Summary:"
        android:id="@+id/textViewSummaryErie"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/textViewSummaryErie2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lake Erie is the smallest of the Great Lakes and is the greatest to be affected from urbanization and agriculture. Water temperature varies depending on the season from being warm in the summer to freezing in the winter. Its fertile soils makes Lake Erie a choice for intensive farming."
        android:id="@+id/textViewSummaryErie2"
        android:layout_above="@+id/textViewCauseErie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Water Level Causes:"
        android:id="@+id/textViewCauseErie"
        android:layout_above="@+id/buttonWindErie"
        android:layout_alignLeft="@+id/textViewSummaryErie"
        android:layout_alignStart="@+id/textViewSummaryErie" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winds"
        android:id="@+id/buttonWindErie"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storms"
        android:id="@+id/buttonStormErie"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonEvaporateErie"
        android:layout_toEndOf="@+id/buttonEvaporateErie" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evaporation"
        android:id="@+id/buttonEvaporateErie"
        android:layout_alignTop="@+id/buttonWindErie"
        android:layout_toRightOf="@+id/buttonWindErie"
        android:layout_toEndOf="@+id/buttonWindErie" />

</RelativeLayout>
