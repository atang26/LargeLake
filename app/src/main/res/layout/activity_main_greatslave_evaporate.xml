<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.student.largelake.MainActivityGreatSlaveEvaporate">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Evaporation (Great Slave Lake)"
        android:id="@+id/textViewTitleGreatSlaveEvaporate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView15"
        android:src="@drawable/lakegreatslavewarming"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Summary:"
        android:id="@+id/textViewGreatSlaveEvaporate1"
        android:layout_marginBottom="37dp"
        android:layout_alignBottom="@+id/imageView15"
        android:layout_alignLeft="@+id/textViewTitleGreatSlaveEvaporate"
        android:layout_alignStart="@+id/textViewTitleGreatSlaveEvaporate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Continuing climate changing leaning toward a warming trend have resulted in increase evaporation over the years which meant that there will be less water levels overall for the lake."
        android:id="@+id/textViewEvaporateGreatSlave2"
        android:layout_alignTop="@+id/textViewGreatSlaveEvaporate1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp" />

</RelativeLayout>
