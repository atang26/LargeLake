<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.student.largelake.MainActivityGreatBear">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Great Bear Lake"
        android:id="@+id/textViewTitleGreatBear"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:src="@drawable/lakegreatbear"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Summary:"
        android:id="@+id/textViewGreatBear1"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/textViewGreatBear2"
        android:layout_toLeftOf="@+id/textViewTitleGreatBear"
        android:layout_toStartOf="@+id/textViewTitleGreatBear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Great Bear Lake is the fourth largest of the large lakes. Lodges located around the area provides visitors the opportunity to go fishing or hunting."
        android:id="@+id/textViewGreatBear2"
        android:layout_below="@+id/imageView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Water Level Causes:"
        android:id="@+id/textViewGreatBear3"
        android:layout_below="@+id/textViewGreatBear2"
        android:layout_alignLeft="@+id/textViewGreatBear1"
        android:layout_alignStart="@+id/textViewGreatBear1"
        android:layout_marginTop="27dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Climate Warming"
        android:id="@+id/buttonWarmingGreatBear"
        android:layout_below="@+id/textViewGreatBear3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
