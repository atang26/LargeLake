<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.student.largelake.MainActivityHuron">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lake Huron"
        android:id="@+id/textViewTitleHuron"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@drawable/lakehuron"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="98dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Summary:"
        android:id="@+id/textViewHuron1"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_toLeftOf="@+id/textViewTitleHuron"
        android:layout_toStartOf="@+id/textViewTitleHuron"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lake Huron is the third largest of the large lakes. It is characterized by its rocky shores and shallow, sandy beaches."
        android:id="@+id/textViewHuron2"
        android:layout_below="@+id/textViewHuron1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Water Level Causes:"
        android:id="@+id/textViewHuron3"
        android:layout_below="@+id/textViewHuron2"
        android:layout_alignLeft="@+id/textViewHuron1"
        android:layout_alignStart="@+id/textViewHuron1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ice Covers"
        android:id="@+id/buttonIceCoverHuron"
        android:layout_below="@+id/textViewHuron3"
        android:layout_toRightOf="@+id/buttonWindHuron"
        android:layout_toEndOf="@+id/buttonWindHuron" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winds"
        android:id="@+id/buttonWindHuron"
        android:layout_below="@+id/textViewHuron3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
